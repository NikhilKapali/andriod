<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gra4"
    android:weightSum="10"
    tools:context=".Dashboard">
    <RelativeLayout
        android:layout_weight = "2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW OUR MENU"
        android:textSize="30dp"
        android:id="@+id/menu_view"
        android:textAlignment="center"
        android:textStyle="italic" />

    </RelativeLayout>
    <GridLayout
        android:columnCount ="2"
        android:rowCount = "2"
        android:alignmentMode = "alignMargins"
        android:columnOrderPreserved = "false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "8"
        android:padding = "14dp">

        <android.support.v7.widget.CardView
            android:layout_width = "0dp"
            android:layout_height = "0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/ic_restaurant_menu_black_24dp"
                    android:id="@+id/menu_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Our Menu"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--item no 2-->
        <android.support.v7.widget.CardView
            android:layout_width = "0dp"
            android:layout_height = "0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/ic_event_seat_black_24dp"
                    android:id="@+id/table_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Table"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!--item no 3-->
        <android.support.v7.widget.CardView
            android:layout_width = "0dp"
            android:layout_height = "0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/ic_tag_faces_black_24dp"
                    android:id="@+id/update_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Your Profile"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <!--item no 4-->
        <android.support.v7.widget.CardView
            android:layout_width = "0dp"
            android:layout_height = "0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_phone_in_talk_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>
</LinearLayout>
